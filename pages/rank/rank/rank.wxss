.rank-content {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 0rpx;
}
.rank-title {
  font-size: 18px;
  font-weight: bold;
  margin: 50rpx 0;
}
.rank-item{
  font-size: 16px;
  height: 100rpx;
  line-height: 100rpx;
}
.rank-item-rank{
  float: left;
  width: 25%;
}
.rank-item-image{
  float: left;
  width: 25%;
}
.rank-image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.rank-item-name{
  float: left;
  width: 25%;
}
.rank-item-score{
  float: left;
  width: 25%;
}