.rank-content {
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 0rpx;
}
.rank-title {
  height: 200rpx;
  width: 100%;
  border-bottom: 1px solid darkgray;
}
.rank-title-item{
  padding-top: 40rpx;
  float: left;
  text-align: center;
  width: 50%;
}
.rank-title-number {
  padding-top: 20rpx;
  font-size: 30px;
  color: green;
}

.rank-list {
  width: 100%;
  border-top: 1px solid darkgray;
  border-bottom: 1px solid darkgray;
}
.rank-item {
  height: 300rpx;
  position: relative;
  border-bottom: 1px solid gray;
}
.result-win{
  color: green;
}
.result-lose{
  color: red;
}
.rank-item-result {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  font-size: 18px;
  top: 0;
  left: 0;
}
.rank-item-score {
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.rank-item-role {
  width: 30%;
  height: 220rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.rank-item-config {
  width: 70%;
  height: 220rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: left;
  font-size: 14px;
  margin-top: 200rpx;  
}
.role-image {
  margin-top: 5px;
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}
.role-name {
  margin-top: 10rpx;
  font-size: 14px;
}
.config-detail-item {
  margin: 10rpx;
  display: block;
}
.detail-camp {
  font-size: 16px;
  display: inline-block;
  margin-right: 10rpx;
  font-weight: bold;
}
.detail-role {
  line-height: 16px;
  display: inline-block;
  margin-right: 10rpx;
}
.detail-number {
  display: inline-block;
}